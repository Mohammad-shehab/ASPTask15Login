@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<div style="width: 50%; margin: auto; text-align: center; margin-top: 20px;">
    <a asp-action="AddProduct" asp-controller="Product" class="btn btn-primary btn-sm" style="margin-bottom: 20px;">Add Product</a>
</div>

<h1 style="width: 50%; margin: auto; text-align: center; margin-top: 20px;">Welcome, @ViewBag.UserName</h1>
<table class="styled-table">
    <tr>
        <td style="padding: 10px;">User ID:</td>
        <td style="padding: 10px; font-weight: bold;">@ViewBag.UserId</td>
    </tr>
</table>

<table class="styled-table">
    <tr>
        <th>@Html.DisplayNameFor(m => m.ProductName)</th>
        <th>@Html.DisplayNameFor(m => m.Price)</th>
        <th>Operations</th>
    </tr>
    @foreach (var rrr in Model)
    {
        <tr>
            <td>@rrr.ProductName</td>
            <td>@rrr.Price</td>
            <td>
                <a asp-action="Delete"
                   asp-controller="Products"
                   asp-route-id="@rrr.ProductId"
                   class="btn btn-outline-danger">Delete</a>
                <a asp-action="Edit"
                   asp-controller="Products"
                   asp-route-id="@rrr.ProductId"
                   class="btn btn-outline-warning">Edit</a>
                <a asp-action="Details"
                   asp-controller="Products"
                   asp-route-id="@rrr.ProductId"
                   class="btn btn-outline-primary">Details</a>
            </td>
        </tr>
    }
</table>

<style>
    .styled-table {
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        font-size: 0.9em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

        .styled-table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
        }

        .styled-table th, .styled-table td {
            padding: 12px 15px;
        }

        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .styled-table tbody tr:last-of-type {
                border-bottom: 2px solid #009879;
            }

    .btn {
        margin-right: 5px;
    }
</style>
