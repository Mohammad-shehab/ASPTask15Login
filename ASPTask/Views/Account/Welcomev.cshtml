@model User

@{
    ViewBag.Title = "Welcome";
}

<h1 style="width: 50%; margin: auto; text-align: center; margin-top: 20px;">Welcome, @Model.UserName</h1>
<table class="styled-table">
    <tr>
        <td style="padding: 10px;">User ID:</td>
        <td style="padding: 10px; font-weight: bold;">@Model.UserId</td>
    </tr>
    <tr>
        <td style="padding: 10px;">Email:</td>
        <td style="padding: 10px; font-weight: bold;">@Model.Email</td>
    </tr>
    <tr>
        <td style="padding: 10px;">Role:</td>
        <td style="padding: 10px; font-weight: bold;">@Model.Role.RoleName</td>
    </tr>
</table>

<style>
    .styled-table {
        width: 50%;
        margin: auto;
        border-collapse: collapse;
    }

        .styled-table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        .styled-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .styled-table tr:hover {
            background-color: #ddd;
        }
</style>
