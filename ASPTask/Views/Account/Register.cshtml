@model User
@{
    ViewData["Title"] = "Register";
}


<form asp-action="Register" method="post" style="width: 50%; margin: auto;">
    <table class="styled-table">
        <tr>
            <td><label asp-for="UserName"></label></td>
            <td>
                <input asp-for="UserName" class="form-control" />
                <span class="alert-danger" asp-validation-for="UserName" style="color: red;"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="Email"></label></td>
            <td>
                <input asp-for="Email" class="form-control" />
                <span class="alert-danger" asp-validation-for="Email" style="color: red;"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <td>
                <input asp-for="Password" class="form-control" type="password" />
                <span class="alert-danger" asp-validation-for="Password" style="color: red;"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="Role.RoleName"></label></td>
            <td>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Depts"></select>
                <span class="alert-danger" asp-validation-for="RoleId" style="color: red;"></span>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: center; padding: 10px;">
                <input type="submit" class="btn btn-success" value="Save" style="margin-right: 10px;" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </td>
        </tr>
    </table>
    <div class="text-danger" style="text-align: center; margin-top: 10px;">
        @Html.ValidationSummary()
    </div>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<style>
    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 18px;
        text-align: left;
    }

        .styled-table th, .styled-table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        .styled-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .styled-table tr:hover {
            background-color: #ddd;
        }

        .styled-table th {
            background-color: #f2f2f2;
        }
</style>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
